<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
    
        <record id="club_member_form_view_inherit_l10n_ch_sfv" model="ir.ui.view">
            <field name="name">club.member.form.inherit.l10n_ch.sfv</field>
            <field name="inherit_id" ref="clubmanagement.club_member_form_view" />
            <field name="model">club.member</field>
            <field name="arch" type="xml">
                
                <xpath expr="//div[@class='oe_title']" position="after">
                    <div invisible="sfv_valid_license" class="alert alert-warning o_sfv_license_warning">
                        <span>
                            <i class="fa fa-exclamation-circle"></i> <strong>No valid SFV player license!</strong>
                        </span>
                    </div>
                </xpath>

                <xpath expr="//notebook/page[@string='Club Member']" position="after">
                    <page string="SFV">
                        <group string="SFV Player License">
                            <field name="sfv_license" />
                            <field name="sfv_qualified_from" />
                            <field name="sfv_qualified_until" />
                            <field name="sfv_request_submit_date" />
                        </group>
                        <separator />
                        <group string="SFV Trainer Diploma">
                            <field name="sfv_trainer_diploma_ids">
                                <list editable="bottom">
                                    <field name="diploma_id" options="{'on_create_edit': True}" />
                                    <field name="acquisition_date"/>
                                    <field name="last_refresh_date" />
                                    <field name="expiry_date" />
                                    <field name="valid" readonly="1" />
                                </list>
                            </field>
                        </group>
                    </page>
                </xpath>

            </field>
        </record>
    
    </data>
    

</odoo>
